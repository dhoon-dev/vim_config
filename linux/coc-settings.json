{
    "coc.preferences.formatOnType": true,
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp"],
            "rootPatterns": [".ccls-root", "compile_commands.json", ".git/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/.ccls-cache"
                },
                "client": {
                    "snippetSupport": true
                },
                "highlight": {
                    "lsRanges": true
                }
            }
        }
    }
}
